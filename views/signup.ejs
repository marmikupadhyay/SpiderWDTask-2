<div class="row mainwrap">
  <div class="col l6 s12 banner"></div>
  <div class="col l6 s12 sidebox pink lighten-1">
    <div class="z-depth-2 head cyan accent-4">
      <i class="material-icons large left white-text">edit</i>
      <h1 class="title white-text valign-wrapper right-align">
        Blogstagram
      </h1>
      <hr class="teal line" />
    </div>
    <div class="form-container white col s10 offset-s1 z-depth-5">
      <h1 class="sub-head cyan accent-4 white-text z-depth-3">
        Sign-Up <%- include('./partials/messages.ejs'); %>
      </h1>
      <form action="/signup" method="POST" class="col s12 z-depth-2">
        <div class="input-field">
          <i class="material-icons prefix">account_circle</i>
          <input
            type="text"
            id="username"
            name="username"
            value="<%= typeof username!='undefined'?username:''%>"
          />
          <label for="username">Username</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">mail</i>
          <input
            type="email"
            id="mail"
            name="mail"
            class="validate"
            value="<%= typeof mail!='undefined'?mail:''%>"
          />
          <label for="mail">E-Mail</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">vpn_key</i>
          <input
            type="password"
            id="pass"
            name="pass"
            value="<%= typeof pass!='undefined'?pass:''%>"
          />
          <label for="pass">Password</label>
        </div>
        <div class="col s12 btn-box">
          <button
            class="btn cyan accent-4 waves-effect waves-light"
            type="submit"
          >
            Create
          </button>
        </div>
      </form>
      <h5 class="text">Have an Account ? Sign In <a href="/login">HERE</a></h5>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
