<h1 class="sub-head">
  <%= title %>
</h1>
<hr />
<div class="article-form z-depth-2">
  <form action="/user/edit<%=post._id%>" method="POST" id="<%= post._id %>">
    <div class="input-field">
      <i class="material-icons prefix">title</i>
      <input type="text" id="title" name="title" value="<%= post.title %>" />
      <label for="title">Title</label>
    </div>
    <div class="input-field">
      <textarea
        name="body"
        id="body"
        class="materialize-textarea hide bodyarea"
      >
<%= post.body %></textarea
      >
      <h4>Content</h4>
      <div class="iconbar">
        <a
          class="btn-floating btn-large waves-effect waves-light pink lighten-1 bold"
          ><i class="material-icons">format_bold</i></a
        ><a
          class="btn-floating btn-large waves-effect waves-light blue lighten-1 italic"
          ><i class="material-icons">format_italic</i></a
        ><a
          class="btn-floating btn-large waves-effect waves-light green lighten-1 underline"
          ><i class="material-icons">format_underline</i></a
        ><a
          class="btn-floating btn-large waves-effect waves-light yellow lighten-1 link"
          ><i class="material-icons">link</i></a
        >
        <a
          class="btn-floating btn-large waves-effect waves-light black lighten-1 unlink"
          ><i class="material-icons">link_off</i></a
        ><a
          class="btn-floating btn-large waves-effect waves-light violet lighten-1 insimg"
          ><i class="material-icons">insert_photo</i></a
        >
      </div>

      <iframe name="<%= post._id %>" id="richTextField" class="editor"></iframe>
    </div>
    <div class="col s12 btn-box">
      <a class="btn cyan accent-4 waves-effect waves-light submit2">
        Save
      </a>
    </div>
  </form>
</div>
